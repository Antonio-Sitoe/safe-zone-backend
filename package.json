{
  "name": "safe-zone-backend",
  "version": "1.0.0",
  "description": "Backend API para o projeto Safe Zone",
  "main": "src/app.ts",
  "scripts": {
    "dev": "bun run --watch src/app.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "generate": "bunx drizzle-kit generate",
    "migrate": "bunx drizzle-kit migrate",
    "studio": "bunx drizzle-kit studio --port=3005"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.3",
    "@elysiajs/static": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@types/uuid": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.12",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "elysia": "latest",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "uuid": "^13.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  },
  "keywords": [
    "backend",
    "api",
    "elysia",
    "typescript",
    "bun"
  ],
  "author": "Safe Zone Team",
  "license": "MIT"
}